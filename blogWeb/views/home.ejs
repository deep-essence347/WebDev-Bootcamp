<%- include("partials/header"); %>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post){ %>
    <% var trimmedText = post.body.slice(0,100) + "..."; %>
    <h2><%= post.title %></h2>
    <p><%= trimmedText %> <a href="/posts/<%= post._id %>">Read More</a></p>
<% }) %>

<%- include("partials/footer"); %>